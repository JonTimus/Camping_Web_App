<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <strong><%= campground.name %></strong></h1>
        
        <div style="width: 30%; margin: 25 auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <label>Your Comment:</label>
                    <textarea class="form-control" name="comment[text]"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-sm">
                <span class="glyphicon glyphicon-arrow-left"></span> Go Back
            </a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>