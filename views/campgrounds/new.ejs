<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Create a New CampGround</h1>
            
            <div style="width: 30%; margin: 25 auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" type="text" name="name" required>
                    </div>
                    <div class="form-group">
                        <label>Image URL</label>
                        <input class="form-control" type="text" name="image" required>
                    </div>
                     <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" type="number" name="price" min="0.01" step="0.01" required>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" name="description" rows="12" required></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds" class="btn btn-sm">
                  <span class="glyphicon glyphicon-arrow-left"></span> Go Back
                </a>
            </div>
            
        </div>
    </div>

<% include ../partials/footer %>